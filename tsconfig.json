{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es2015",
        "target": "es5",
        "lib": ["es6", "dom"], 
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@config": ["src/config/live"],
            "@testing/*": ["testing/*"]
        }
    },
    "include": ["src", "src/custom.d.ts"],
   "exclude": ["node_modules"]
}